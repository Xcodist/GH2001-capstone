{
  "name": "Getting Started Example",
  "version": "1.0",
  "description": "Build an Extension!",
  "manifest_version": 2,
  "icons": {
    "16": "icons/16.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "background": {
    "scripts": [
      "hot-reload.js"
    ],
    "persistent": false
  },
  "page_action": {
    "default_title": "Our Extension",
    "default_popup": "index.html"
  },
  "permissions": [
    "activeTab",
    "declarativeContent",
    "contextMenus",
    "tabs",
    "storage"
  ]
}