{
  "name": "Shopping Justice Warrior",
  "version": "1.0",
  "description": "Build an Extension!",
  "manifest_version": 2,
  "icons": {
    "16": "icons/colored-cart.png",
    "48": "icons/colored-cart.png",
    "128": "icons/colored-cart.png"
  },
  "background": {
    "scripts": [
      "background.js"
    ]

  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "browser_action": {
    "default_title": "Join the Movement",
    "default_popup": "index.html"
  },
  "permissions": [
    "activeTab",
    "declarativeContent",
    "contextMenus",
    "notifications",
    "tabs",
    "storage",
    "https://*/*cart*",
    "http://*/*cart*"
  ]
}
